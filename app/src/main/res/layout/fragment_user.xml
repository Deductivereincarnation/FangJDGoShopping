<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E2E2"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_weight="5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/b5b" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/yhtx"
            />

        <TextView
            android:id="@+id/five_btn_dl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/img"
            android:layout_toRightOf="@+id/img"
            android:text="登录/注册"
            android:textColor="#f0f"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:background="@mipmap/q" />
    </RelativeLayout>

    <RelativeLayout
        android:background="#fff"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/img3"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_user_shou"
            />
        <TextView
            android:id="@+id/tv_address"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址"
            android:layout_marginLeft="40dp"
            />
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_normal_dot_left"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:background="#fff"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_user_order"
                />
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部订单"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_normal_dot_left"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>
        <RadioGroup
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                style="@style/LogGeren1"
                android:id="@+id/radiogeren1"
                android:drawableTop="@mipmap/ic_user_order_wait_pay"
                android:text="未付款"
                />
            <RadioButton
                style="@style/LogGeren1"
                android:id="@+id/radiogeren2"
                android:drawableTop="@mipmap/ic_user_order_wait_drive"
                android:text="待发货"
                />
            <RadioButton
                style="@style/LogGeren1"
                android:id="@+id/radiogeren3"
                android:drawableTop="@mipmap/ic_user_order_wait_receipt"
                android:text="待收货"
                />
            <RadioButton
                style="@style/LogGeren1"
                android:id="@+id/radiogeren4"
                android:drawableTop="@mipmap/ic_user_order_wait_comment"
                android:text="待评价"
                />
            <RadioButton
                style="@style/LogGeren1"
                android:id="@+id/radiogeren5"
                android:drawableTop="@mipmap/ic_user_order_wait_refund"
                android:text="退款/货"
                />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:background="#fff"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_user_property"
                />
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的财产"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_normal_dot_left"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>
        <RadioGroup
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                style="@style/LogGeren1"
                android:id="@+id/radiogeren6"
                android:drawableTop="@mipmap/ic_user_property_1"
                android:text="预存款"
                />

            <RadioButton
                style="@style/LogGeren1"
                android:id="@+id/radiogeren7"
                android:drawableTop="@mipmap/ic_user_property_2"
                android:text="充值卡"

                />
            <RadioButton
                style="@style/LogGeren1"
                android:id="@+id/radiogeren8"
                android:drawableTop="@mipmap/ic_user_property_3"
                android:text="代金券"
                />

            <RadioButton
                style="@style/LogGeren1"
                android:id="@+id/radiogeren9"
                android:drawableTop="@mipmap/ic_user_property_4"
                android:text="红包"
                />

            <RadioButton
                style="@style/LogGeren1"
                android:layout_weight="1"
                android:id="@+id/radiogeren10"
                android:drawableTop="@mipmap/ic_user_property_5"
                android:text="积分"
                />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:background="#fff"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@mipmap/gz"
                android:text="商品关注"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@mipmap/hd"
                android:text="店铺关注"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/kh"
                android:gravity="center"
                android:text="内容收藏" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@mipmap/lljl"
                android:text="浏览记录"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@mipmap/mydd"
                android:text="我的活动"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@mipmap/myqb"
                android:text="社区"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@mipmap/shqz"
                android:text="客户服务"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>
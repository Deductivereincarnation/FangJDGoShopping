<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="user.view.ZhuceActivity">

    <EditText
        android:id="@+id/ed_user"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="手机号/会员/会员名/邮箱"
        android:layout_below="@+id/head_image"
        android:layout_alignLeft="@+id/ed_password"
        android:layout_alignStart="@+id/ed_password"
        />

    <EditText
        android:id="@+id/ed_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:password="true"
        android:layout_below="@+id/ed_user"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/zhuce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_below="@id/ed_password"
        android:layout_marginTop="10dp"
        android:background="#cc5a0d"
        />

</LinearLayout>
